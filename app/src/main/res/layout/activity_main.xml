<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DFEAF1">

    <TextView
        android:text="@string/headline"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#F08C35"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        style="@style/button"
        android:id="@+id/spotify_btn"
        android:text="Spotify Streamer"/>

    <Button
        style="@style/button"
        android:id="@+id/scores_btn"
        android:text="Scores App"/>

    <Button
        style="@style/button"
        android:id="@+id/library_btn"
        android:text="Library App"/>

    <Button
        style="@style/button"
        android:id="@+id/bigger_btn"
        android:text="Build it Bigger"/>

    <Button
        style="@style/button"
        android:id="@+id/xyz_btn"
        android:text="XYZ Reader"/>

    <Button
        style="@style/button"
        android:id="@+id/capstone_btn"
        android:text="Capstone: My Own App"/>

</LinearLayout>
